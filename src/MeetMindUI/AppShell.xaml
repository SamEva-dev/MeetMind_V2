<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MeetMindUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MeetMindUI"
    xmlns:views="clr-namespace:MeetMindUI.Views"
    Title="MeetMindUI"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Record"
        ContentTemplate="{DataTemplate views:RecordingPage}"
        Route="RecordingPage" />
    <ShellContent
        Title="Histories"
        ContentTemplate="{DataTemplate views:HistoryPage}"
        Route="HistoryPage" />

    <ShellContent
    Title="Setting"
    ContentTemplate="{DataTemplate views:SettingsPage}"
    Route="SettingsPage" />

</Shell>
